{
  "watch": ["src"],      
  "ext": "js,json",      
  "ignore": ["dist"],    
  "execMap": {
    "js": "node --inspect" 
  },
  "delay": "1000",         
  "env": {
    "NODE_ENV": "development"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App Restarted\" with title \"Nodemon\"'"
  }
}
